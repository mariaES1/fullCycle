{
  "compilerOptions": {
    "incremental": true,          
    "target": "es2020",                                    
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true, 
    "module": "commonjs",                               
    "outDir": "./dist",           
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "strictNullChecks": false,                         
    "skipLibCheck": true,   
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }                            
  },
  "include": [
    "src/**/*.ts"
  ]
}
